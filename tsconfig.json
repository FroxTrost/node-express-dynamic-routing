{
  "compilerOptions": {
    "module": "commonjs",
    "strict": true,
    "baseUrl": "./",
    "outDir": "./",
    "experimentalDecorators": true,
    "target": "es2016",
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "types": [
      "node"
    ],
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include": [
    "index.ts"
  ],
  "exclude": [
    "./src/public/",
    "node_modules",
    "**/__tests__/*"
  ]
}