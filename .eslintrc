{
    "env": {
        "browser": true,
        "node": true,
        "es6": true
    },
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "import"
    ],
    "parser": "babel-eslint",
    "extends": [
        "airbnb",
        "standard"
    ],
    "rules": {
        "strict": 0,
        "babel/semi": 0,
        "linebreak-style": 0,
        "indent": [
            "error",
            2,
            {
                "ignoredNodes": [
                    "TemplateLiteral"
                ]
            }
        ],
        "template-curly-spacing": "off",
        "react/prop-types": 0,
        "no-shadow": 0,
        "react/jsx-filename-extension": 0,
        "prefer-arrow-callback": 0,
        "arrow-body-style": 0,
        "quote-props": [
            0,
            "as-needed"
        ],
        "dot-notation": 0,
        "curly": 2,
        "no-multi-spaces": 2,
        "prefer-const": 2,
        "prefer-template": 0,
        "no-nested-ternary": 0,
        "arrow-parens": 0,
        "max-classes-per-file": [
            "error",
            2
        ],
        "object-curly-newline": 0,
        "import/prefer-default-export": 0,
        "max-len": 0,
        "no-prototype-builtins": 0,
        "no-param-reassign": 0,
        "no-plusplus": 0,
        "func-names": 0,
        "jsx-quotes": [
            2,
            "prefer-single"
        ],
        "no-console": [
            "error",
            {
                "allow": [
                    "info",
                    "warn",
                    "error"
                ]
            }
        ],
        "standard/no-callback-literal": 0,
        "react/jsx-handler-names": [
            0,
            {
                "eventHandlerPrefix": "on",
                "eventHandlerPropPrefix": "on"
            }
        ]
    }
}